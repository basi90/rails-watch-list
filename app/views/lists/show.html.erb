<div class="container">
  <h1><%= @list.name %></h1>

  <h2>Bookmarks</h2>

  <ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item">
        <%= bookmark.comment %>
        <%= link_to "Delete", list_bookmark_path(@list, bookmark), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>

  <%= link_to "New Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "Back", lists_path, class: "btn btn-secondary" %>
</div>
